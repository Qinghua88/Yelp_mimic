<%- include("../partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome to the Camps!
			</h1>
			<p>
				View the hand-picked camp ground from the world!
			</p>
			<p>
				<a href='/camps/new' class='btn btn-lg btn-primary'>Add more camps</a>
			</p>
		</div>
	</header>
</div>

<div class='row text-center' style="display: flex; flex-wrap: wrap">
	<% camps.forEach((camp) => { %>
		<div class='col-md-3 col-sm-6'>
			
			<div class='thumbnail'>
				<img src="<%= camp.imageURL %>">
				<h4>
					<%= camp.name %>
				</h4>
				<a href='/camps/<%= camp._id %>' class='btn btn-lg btn-success'>More Info</a>
			</div>
			
		</div>
	
	<% }); %>
	
</div>

<div>
	<a href="/">Go to home page</a>	
</div>
<%- include("../partials/footer") %>
