<%- include("../partials/header") %>

<div class='container'>
	<div class='row'>
		<div class='col' style='margin: 0px auto'>
			<h1 style="text-align: center;">
				Add a new camp groud!
			</h1>
			<div style='width:30%; margin: 25px auto;'>

				<form action='/camps' method='POST'>
					<div class='form-group'>
						<input class='form-control' type='text' placeholder='camp name' name='campName'>
					</div>
					<div class='form-group'>
						<input class='form-control' type='number' placeholder='camp price' name='price' min='0.00' step='0.01'>
					</div>
					<div class='form-group'>
						<input class='form-control' type='text' placeholder='image url' name='imageURL'>
					</div>
					<div class="form-group">
						<!-- <label for="location">Location</label> -->
						<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
					</div>
					<div class='form-group'>
						<input class='form-control' type='text' placeholder='description' name='description'>
					</div>
					<div class='form-group'>
						<button class='btn btn-lg btn-primary btn-block'>submit!</button>
					</div>
				</form>
				<a href='/camps'>Go back</a>
			</div>
		</div>
	</div>
	
</div>

<%- include("../partials/footer") %>