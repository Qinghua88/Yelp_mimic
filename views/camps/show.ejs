<%- include("../partials/header") %>

<div class='container'>
	<div class='row'>
		<div class='col-md-3'>
			<p class='lead'>
				CAMPS
			</p>
			<div class='list-group'>
				<li>Info 1</li>
				<li>Info 2</li>
				<li>Info 3</li>
			</div>
		</div>
		<div class='col-md-9'>
			<div class='thumbnail'>
				<img class='img-responsive' src='<%= camp.imageURL %>'>
				<div class='caption-full'>
					<h4 class='pull-right'>
						$ <%= camp.price %>/night
					</h4>
					<h4>
						<%= camp.name %>
					</h4>
					<p>
						<%= camp.descr %>
					</p>
					<p>
						<em>This is submitted by: <%= camp.author.username%></em>
					</p>
					<% if (currentUser && camp.author.userId.equals(currentUser._id)) { %>
						<a class='btn btn-warning' href='/camps/<%= camp._id %>/edit'>
							Edit
						</a>
						<form class='deleteBtn' action='/camps/<%= camp._id %>?_method=DELETE' method='POST'>
							<button class='btn btn-danger'>
								Delete
							</button>
						</form>
					<% } %>
					
				</div>
			</div>
			<div class='well'>
				<div class='text-right'>
					<a class='btn btn-success' href='/camps/<%= camp._id %>/comments/new'>Add new comment</a>
				</div>
				<hr>
				<% camp.comments.forEach((comment) => { %>
				<div class='row'>
					<div class='col-md-12'>
						<strong><%= comment.author.username %></strong>
						<span class='pull-right'>10 days ago</span>
						<p>
							<%= comment.text %>
						</p>
						<% if (currentUser && comment.author.userId.equals(currentUser._id)) { %>
						<a class='btn btn-warning' href='/camps/<%= camp._id %>/comments/<%= comment._id%>/edit'>Edit</a>
						<form class='deleteBtn' action='/camps/<%= camp._id %>/comments/<%= comment._id%>?_method=DELETE' method='POST'>
							<button class='btn btn-danger'>
								Delete
							</button>
						</form>
						<% } %>
					</div>
				</div>
				<% });%>
			</div>
		</div>
	</div>
</div>


<a href='/camps'>Go to camps list</a>
<%- include("../partials/footer") %>