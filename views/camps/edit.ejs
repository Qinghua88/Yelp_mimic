<%- include("../partials/header") %>

<div class='container'>
	<div class='row'>
		<div class='col' style='margin: 0px auto'>
			<h1 style="text-align: center;">
				Edit the campground!
			</h1>
			<div style='width:30%; margin: 25px auto;'>
				<form action="/camps/<%= camp._id %>?_method=PUT" method="POST">
					<div class='form-group'>
						<input class='form-control' type='text' name='camp[name]' value='<%= camp.name %>'>
					</div>
					<div class='form-group'>
						<input class='form-control' type='number' name='camp[price]' value='<%= camp.price %>'>
					</div>
					<div class='form-group'>
						<input class='form-control' type='text' name='camp[imageURL]' value='<%= camp.imageURL %>'>
					</div>
					<div class="form-group">
						<!-- <label for="location">Location</label> -->
						<input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
					</div>
					<div class='form-group'>
						<input class='form-control' type='text' name='camp[descr]' value='<%= camp.descr %>'>
					</div>
					<div class='form-group'>
						<button class='btn btn-lg btn-primary btn-block'>submit!</button>
					</div>
				</form>
				<a href='/camps'>Go back</a>
			</div>
		</div>
	</div>
	
</div>

<%- include("../partials/footer") %>